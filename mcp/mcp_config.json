{
    "servers": {
        "csv-server": {
            "description": "CSV文件查询服务",
            "command": "python",
            "args": ["-m", "src.mcp_services.standalone_csv_server"],
            "env": {},
            "default_args": {
                "--csv-dir": "src/mcp_services/input"
            }
        },
        "vector-server": {
            "description": "向量数据库查询服务",
            "command": "python",
            "args": ["-m", "src.mcp_services.standalone_vector_server"],
            "env": {},
            "default_args": {
                "--chroma-db": "./chroma_db"
            }
        },
        "combined-server": {
            "description": "组合查询服务（CSV + 向量）",
            "command": "python",
            "args": ["-m", "src.mcp_services.mcp_launcher", "--service", "combined"],
            "env": {},
            "default_args": {
                "--csv-dir": "src/mcp_services/input",
                "--chroma-db": "./chroma_db"
            }
        }
    },
    "client_config": {
        "timeout": 30,
        "retry_attempts": 3,
        "keepalive_interval": 30
    },
    "workflows": {
        "schedule_planning": {
            "name": "角色日程规划",
            "servers": ["csv-server"],
            "description": "基于角色信息生成日程安排"
        },
        "character_analysis": {
            "name": "角色深度分析",
            "servers": ["csv-server", "vector-server"],
            "description": "结合基础信息和向量搜索进行角色分析"
        },
        "data_exploration": {
            "name": "数据探索",
            "servers": ["csv-server"],
            "description": "探索和分析CSV数据"
        }
    }
} 